<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView android:layout_below="@id/status_card"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:layout_goneMarginTop="4dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/normal_text"
            android:layout_centerHorizontal="true"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Humidity"/>

        <LinearLayout
            android:id="@+id/set_humid"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/normal_text"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/humid_min_text_input"
                style="@style/Widget.Kofee.TextInputLayout"
                android:layout_width="100dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:hint="Min">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/humid_min_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/to_text"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="to"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/humid_max_text_input"
                style="@style/Widget.Kofee.TextInputLayout"
                android:layout_width="100dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:hint="Max">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/humid_max_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/set_humid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_set_humid"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Okay"/>

            <Button
                android:id="@+id/btn_cancel_humid"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Cancel"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.card.MaterialCardView>